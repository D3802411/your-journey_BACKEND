    </header>
    <main>
        <link rel="stylesheets" href="{{ asset('styles/style-formpages.css') }}">
    	<section style="background-image: url('{{ asset('styles/images/Image5.png') }}')" class="section-bg test">
        <div class="form-container article-container">
            <h1>Tell us about your trip!</h1>
                <p>For more views, fill in all the fields.</p>
            {{ form_start(form) }}
                <div class='d-flex justify-content-around'>
                    {{ form_row(form.place, {'attr': {'style': 'width: 300px; height: 25px;'}})}}
                    {{ form_row(form.city, {'attr': {'style': 'width: 300px; height: 25px;'}})}}
                    {{ form_row(form.country, {'attr': {'style': 'width: 300px; height: 25px;'}})}}
                </div>
                <div class='d-flex justify-content-around'>
                    {{ form_row(form.attraction, {'attr': {'style': 'width: 450px; height: 25px;'}})}}
                    {{ form_row(form.activity, {'attr': {'style': 'width: 450px; height: 25px;'}})}}
                </div>
                <div class='d-flex justify-content-start'>
                    {{ form_row(form.title, {'attr': {'style': 'width: 950px; height: 25px;'}})}}
                </div>
                <div class='d-flex justify-content-between'>
                    {{ form_row(form.textArea, {'attr': {'style': 'width: 950px; height: 95px;'}})}}
                </div>
                <div class='d-flex justify-content-around'>
                    {{ form_row(form.publishedAt, {'attr': {'style': 'width: 450px; height: 25px;'}})}}
                    {{ form_row(form.photo, {'attr': {'style': 'width: 450px;'}})}}
                </div>
                <div>
                    {{ form_widget(form) }}
                </div>
                <div class=' btn-container-article'>
                    <button class="btn submit-btn text-white fw-bold">{{ button_label|default('Save') }}</button>
                    <a href="{{ path('app_article_index') }}">back to list</a>
                </div>

            {{ form_end(form) }}
        </div> 
        </section>
    </main>
