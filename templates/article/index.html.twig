{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Place</th>
                <th>City</th>
                <th>Country</th>
                <th>Attraction</th>
                <th>Activity</th>
                <th>Title</th>
                <th>Text Area</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.place }}</td>
                <td>{{ article.city }}</td>
                <td>{{ article.country }}</td>
                <td>{{ article.attraction }}</td>
                <td>{{ article.activity }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.textArea }}</td>
                <td>{{ article.photo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
