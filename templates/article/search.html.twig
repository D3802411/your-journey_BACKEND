{# templates/article/search.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Search Article{% endblock %}

{% block body %}
    <h1>Search</h1>

    {{ form_start(form) }}
        {{ form_row(form.place) }}
        {{ form_row(form.city) }}
        {{ form_row(form.country) }} 
        {{ form_row(form.attraction) }}
        {{ form_row(form.activity) }}                       
        {{ form_row(form.title) }}
 
        <button class="btn btn-primary">Search</button>
    {{ form_end(form) }}

    <h2>Search Results</h2>
    {# Check if there are any articles to display #}
    {% if articles is not empty %}
        <ul>
        {# Loop through the articles and display the details #}
            {% for article in articles %}
                <li>
                    <a href="{{ path('app_article_show', { id: article.id }) }}">
                            {{ article.place }} -
                            {{ article.city }} -
                            {{ article.country }} -                                               
                            {{ article.attraction }} -
                            {{ article.activity }} -                 
                            {{ article.title }}                            
                </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No articles found matching your criteria.</p>
    {% endif %}
{% endblock %}