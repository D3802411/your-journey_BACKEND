{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


    <main>
        <link rel="stylesheets" href="{{ asset('styles/style-formpages.css') }}">
    	<section style="background-image: url('{{ asset('styles/images/Image2.png') }}')" class="section-bg test">
            <div class="central-objects"> 
                <form method="post" class="form-container">

                        <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
                        <p>Please log in and telle us everything! Our community is eager to know all your travel adventures!</p>
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
                        <h4>Or sign up <a href="/register">here</a></h4>
            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
                </div>
                 #}
					<div class="btn-container">
                    <button class="btn btn-lg submit-btn btn-primary" type="submit">Sign in</button>
                    <input type="submit" value="Back" id="back" class="submit-btn text-white fw-bold" />
						</a>

                    </div>
                                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                    <button class="btn btn-primary"><a href="{{ url('app_reset_password')}}">Forgot your password? Send password reset email</a></button>
                </form>


        </section>

{% endblock %}