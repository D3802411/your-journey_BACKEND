                            <div class"row">{{form_row(form.email, {'attr': {'style': 'width: 350px; height: 25px;'}})}}</div>  
                            <div class"row">{{form_row(form.message, {'attr': {'style': 'width: 350px; height: 200px;'}})}}</div>          
