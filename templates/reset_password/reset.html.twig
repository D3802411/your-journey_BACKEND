{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block body %}
    <h1>Reset Your Password</h1>

    <p>Please enter your new password below.</p>
    {# VERIFY THAT IT'S OK OR NOT #}
    {{ form_start(resetPasswordForm) }}
        <div class="mb-3">
            {{ form_label(resetPasswordForm.plainPassword, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(resetPasswordForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your new password'}}) }}
            {{ form_errors(resetPasswordForm.plainPassword) }}
        </div>

        <button type="submit" class="btn btn-primary">Reset Password</button>
    {{ form_end(resetPasswordForm) }}

    <p class="mt-3">
        <a href="{{ path('app_login') }}">Back to Login</a>
    </p>
{% endblock %}